@model List<OrderViewModel>

@{
    ViewData["Title"] = "Sales Order";
}

@if (TempData["ResultOk"] != null)
{
    <h1 class="alert-success">@TempData["ResultOk"]</h1>
}
<div class="container shadow p-5">

    <h1 class="text-center mb-3">Sales Order </h1>

    <div class="col mb-3">
        <a asp-controller="Order" asp-action="Create" class="btn btn-lg btn-primary"><i class="bi bi-file-plus-fill"></i>Add Order</a>
    </div>
    <table class="table table-bordered table-hover item-table">
        <thead>
            <tr>
                <th scope="col">Action</th>
                <th scope="col">Sales Order</th>
                <th scope="col">Order Date</th>
                <th scope="col">Customer</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <div role="group" class="w-60 btn-group">
                            <a asp-controller="Order" asp-action="Edit" asp-route-id="@item.SO_ORDER_ID" class=" btn btn-sm btn-primary"><i class="bi bi-pencil-square"></i> Edit</a>&nbsp;
                            <form method="post" asp-action="DeleteEmp" asp-route-id="@item.SO_ORDER_ID">
                            <button type="submit" class="btn btn-sm btn-danger"
                                    onclick="return confirm('Are you sure you want to delete this data?')">
                                <i class="bi bi-trash-fill"></i>
                                Delete
                            </button>
                            </form>
                        </div>
                    </td>
                    <td width="20%">
                        @item.ORDER_NO
                    </td>
                    <td width="20%">
                        @item.ORDER_DATE.ToString("dd/MM/yyyy")
                    </td>
                    <td width="25%">
                        @item.CUSTOMER_NAME
                    </td>                    
                </tr>
            }
        </tbody>
    </table>
</div>