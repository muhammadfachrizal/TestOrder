@model Order

<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Delete Order</h2>
    </div>

    <form method="post" asp-action="DeleteEmp">
        <input asp-for="SO_ORDER_ID" hidden />
        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="ORDER_NO">Sales Order Number</label>
                <input type="text" class="form-control mb-3" asp-for="ORDER_NO" disabled>
                <span asp-validation-for="ORDER_NO" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="ORDER_DATE">Order Date</label>
                <input type="datetime-local" class="form-control mb-3" asp-for="ORDER_DATE" disabled>
                <span asp-validation-for="ORDER_DATE" class=" alert-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="COM_CUSTOMER_ID">Customer</label>
                <input type="text" class="form-control mb-3" asp-for="COM_CUSTOMER_ID" disabled>
                <span asp-validation-for="COM_CUSTOMER_ID" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="ADDRESS">Address</label>
                <input type="text" class="form-control mb-3" asp-for="ADDRESS" disabled>
                <span asp-validation-for="ADDRESS" class=" alert-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-lg btn-danger p-2"><i class="bi bi-trash-fill"></i>Delete</button>
        <a asp-controller="Order" asp-action="Index" class="btn btn-lg btn-warning p-2">Back To List</a>
    </form>

</div>


@*//for front end validations*@

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }